<div class="col-3">
  <div class="col-auto">
    <div class="btn-group">
      <button type="button" class="btn btn-danger">Difficulty:</button>
      <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Difficulty:</span>
      </button>
      <div class="dropdown-menu">
        <%= link_to 'All',    exercises_path, class: "dropdown-item"%>
        <%= link_to 'Easy',   generate_exercise_path(difficulty: 'easy'), class: "dropdown-item"%>
        <%= link_to 'Medium', generate_exercise_path(difficulty: 'medium'), class: "dropdown-item"%>
        <%= link_to 'Hard',   generate_exercise_path(difficulty: 'hard'), class: "dropdown-item"%>
      </div>
    </div>
  </div>
</div>

