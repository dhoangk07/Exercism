<div class="col-3">
  <div class="col-auto">
    <div class="btn-group">
      <button type="button" class="btn btn-danger">Status:</button>
      <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Status:</span>
      </button>
      <div class="dropdown-menu">
        <%= link_to 'All', exercises_path, class: "dropdown-item"%>
        <%= link_to 'In progress', generate_exercise_path(status: Solution.statuses[:in_progress]), class: "dropdown-item"%>
        <%= link_to 'Lock',        generate_exercise_path(status: Solution.statuses[:locked]),      class: "dropdown-item"%>
        <%= link_to 'Completed',   generate_exercise_path(status: Solution.statuses[:completed]),   class: "dropdown-item"%>
      </div>
    </div>
  </div>
</div>

