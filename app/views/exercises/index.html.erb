<div class="container">
  <div class="row">
    <% @exercises.each do |element| %>
      <div class="col-4 px-2">
        <div class="card-deck py-2 px-0">
          <div class="card">
            <div class="card-body">
              <div class='row ml-3 mt-2' data-title="<%=element.title%>">
                <%= image_tag("hello-world-white.png", alt: "Card image cap", class: "icon")%>
                <div class='exercise-content ml-3'>
                  <h5 class="card-title my-0 "><%=element.title %></h5> 
                  <p class="exercise-difficulty"><%=element.difficulty %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

