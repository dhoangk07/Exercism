<div class="container-fluid col-lg-6">
  <%= simple_form_for(@exercise) do |f| %>
    <%= f.input :title, label: false, placeholder: "Enter title" %>
    <%= f.input :difficulty, collection: Exercise.difficulties.keys, label: false, placeholder: "Enter difficulty" %>
    <%= f.input :tag_list, rows: 15, label: false, placeholder: "Tag", autofocus: true %>
    <%= f.submit "Create", class: 'btn btn-success btn-lg btn-block' %>
  <% end %>
  <%= link_to 'Back', exercises_path, class: 'btn btn-outline-danger mt-lg-3'%>
</div>

