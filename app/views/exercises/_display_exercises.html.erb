<% if @exercises.present? %>
  <% @exercises.each do |element| %>
    <div class="col-4 px-2">
      <div class="card-deck py-2 px-0">
        <div class="card">
          <%= link_to exercise_path(element) do %>
            <div class="card-body">
              <div class='row ml-3 mt-2' data-title="<%=element.title%>">
                <div class="icon">
                </div>
                <div class='exercise-content ml-3'>
                  <h5 class="card-title my-0 "><%=element.title.truncate(20, separator: ' ') %></h5> 
                  <p class="exercise-difficulty my-2 <%=element.difficulty%>"><%=element.difficulty %></p>
                  <div class="exercise-topics">
                    <% if @tags.present? %>
                      <% element.tags.each do |tag| %>
                        <p class="topic"><%=tag.name %></p>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>