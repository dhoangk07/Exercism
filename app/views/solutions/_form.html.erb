<%= simple_form_for Solution.where(user_id: current_user.id, exercise_id: @exercise.id).first do |f| %>
  <%= f.input :content, as: :text, :input_html => {:rows => 20}, label: false, placeholder: 'Please submit your solution' %>
  <%= f.submit 'Submit Your Solution', class: "btn btn-primary btn-block btn-sm" %>
<% end %>